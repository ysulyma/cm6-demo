.cm-editor
  background lighten(#493D26, 90%)
  color #000
  width var(--split)
  height calc(var(--rp-height) - var(--rp-controls-height))
  position absolute !important
  left 0
  top 0
  
.cm-scroller
  min-height calc(var(--rp-height) - var(--rp-controls-height))
  overflow auto

.html-pane
  background #FFF
  position absolute
  left var(--split)
  top 0
  height calc(var(--rp-height) - var(--rp-controls-height))
  width calc(100% - var(--split))

$blue=#1a59b5
$wine=#af1866

.rp-codebooth
  height 100%
  width 100%
  --split 50%
  
  button
    border 0 none transparent
    border-radius 0
    color #FFF
    cursor pointer
    font-family "Alegreya", serif
    font-size 1.5rem
    height 3rem
    position absolute
    bottom var(--rp-controls-height)
    width calc(var(--split) / 4)
    z-index 1000

.active-replay .code-playground,
.active-playground .code-replay
  opacity 0
  pointer-events none

.button-replay, .button-playground
  background-color #444
  color #666

.button-replay:active, .button-playground:active
  background-color darken($wine, 20%)
  color #CCC

.active-replay .button-replay,
.active-playground .button-playground
  background-color lighten($wine, 20%)

.button-playground
  left calc(var(--split) / 4)

.button-copy
  background-color #1a69b5
  left calc(var(--split) * 2 / 4)
  
  &:active
    background-color #16599a

.button-run
  background-color #18a85e
  left calc(var(--split) * 3 / 4)
  
  &:active
    background-color #148f50

// dragging
.ui-resizable
  position relative

.ui-resizable-handle
  position absolute
  font-size 0.1px
  -ms-touch-action none
  touch-action none
  z-index 200

.ui-resizable-disabled .ui-resizable-handle,
.ui-resizable-autohide .ui-resizable-handle
  display none

.ui-resizable-ew
  cursor ew-resize
  width 7px
  left var(--split)
  top 0
  height calc(var(--rp-height) - var(--rp-controls-height))

.dragging > iframe
  pointer-events none
